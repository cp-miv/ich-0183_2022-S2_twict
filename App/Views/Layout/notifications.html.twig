{% if notifications|length > 0 %}
<section id="event-msg" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                {% for message in notifications %}
                    <div class="alert alert-{{ message.type }}" role="alert">{{ message.content }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endif %}